<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.oukranos.ophiuchus.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to HealthApp v1.0!"
        android:id="@+id/txv_welcome"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:id="@+id/btn_new_record"
        android:layout_below="@+id/txv_welcome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Add new health record..."
        android:scaleType="fitCenter"
        android:paddingTop="35dp"
        android:paddingBottom="35dp"
        android:tint="#ff800000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:id="@+id/btn_server_upload"
        android:scaleType="fitCenter"
        android:paddingTop="35dp"
        android:paddingBottom="35dp"
        android:tint="#ff000080"
        android:layout_below="@+id/btn_new_record"
        android:text="Upload health records"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignRight="@+id/btn_new_record"
        android:layout_alignEnd="@+id/btn_new_record" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:id="@+id/btn_browse_records"
        android:scaleType="fitCenter"
        android:paddingTop="35dp"
        android:paddingBottom="35dp"
        android:tint="#ff000080"
        android:text="Browse health records"
        android:layout_below="@+id/btn_server_upload"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:id="@+id/btn_set_medical_query_file"
        android:scaleType="fitCenter"
        android:paddingTop="35dp"
        android:paddingBottom="35dp"
        android:tint="#ff000080"
        android:text="Set Medical Query File Path"
        android:layout_below="@+id/btn_browse_records"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:id="@+id/btn_set_remote_server"
        android:scaleType="fitCenter"
        android:paddingTop="35dp"
        android:paddingBottom="35dp"
        android:tint="#ff000080"
        android:text="Set Remote Server URL"
        android:layout_below="@+id/btn_set_medical_query_file"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
